<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="course"
            type="com.piotrokninski.teacherassistant.model.course.Course" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_invitation_item_course_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{course.subject}"
            android:textSize="16sp"
            tools:text="Przedmiot"
            android:textAlignment="center"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/home_invitation_item_course_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{@string/home_course_type_text(course.type)}"
            tools:text="Tryb"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/home_invitation_item_course_dates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    </LinearLayout>
</layout>