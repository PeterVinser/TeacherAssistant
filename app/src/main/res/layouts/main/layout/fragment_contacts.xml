<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.fragment.ContactsFragment"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/contacts_toggle_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:selectionRequired="true"
        app:singleSelection="true"
        android:layout_margin="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contacts_friends_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_friends_toggle_button_text"
            android:minWidth="144dp"
            style="?attr/materialButtonOutlinedStyle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/contacts_invitations_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacts_invitations_toggle_button_text"
            android:minWidth="144dp"
            style="?attr/materialButtonOutlinedStyle"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/contacts_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/no_users_text"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contacts_invitations_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/contacts_no_invitations_found_text"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contacts_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/contact_friend_list_item" />

</LinearLayout>