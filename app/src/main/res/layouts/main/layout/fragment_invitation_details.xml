<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="invitationViewModel"
            type="com.piotrokninski.teacherassistant.viewmodel.main.InvitationDetailsFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.main.fragment.InvitationDetailsFragment">

        <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invitation_details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/invitation_title"
                    android:textAlignment="center"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/invitation_details_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@{invitationViewModel.friendInvitation.invitedUserFullName + ':'}"
                    android:textSize="18sp"
                    tools:text="ImiÄ™ i nazwisko" />

                <RadioGroup
                    android:id="@+id/invitation_details_type_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp">

                    <RadioButton
                        android:id="@+id/invitation_details_type_student"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="@string/invitation_details_radio_student_text" />

                    <RadioButton
                        android:id="@+id/invitation_details_type_tutor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/invitation_details_radio_tutor_text" />
                </RadioGroup>

                <TextView
                    android:id="@+id/invitation_details_message_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/invitation_message_title"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/invitation_details_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:autofillHints="no"
                    android:hint="@string/invitation_message_hint"
                    android:inputType="textMultiLine"
                    android:minHeight="48dp"
                    android:text="@={invitationViewModel.friendInvitation.invitationMessage}" />

                <Button
                    android:id="@+id/invitation_details_add_course_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/invitation_details_add_lesson_text"
                    app:icon="@drawable/ic_add_icon" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/invitation_details_course_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/invitation_details_previous_course_button"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/lesson_item_previous_button_description"
                        app:icon="@drawable/ic_left_arrow"
                        app:iconSize="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/invitation_details_course_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/lesson_item_title"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/invitation_details_next_course_button"
                        app:layout_constraintStart_toEndOf="@+id/invitation_details_previous_course_button"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/invitation_details_next_course_button"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/lesson_item_next_button_description"
                        android:textAlignment="textStart"
                        app:icon="@drawable/ic_right_arrow"
                        app:iconGravity="end"
                        app:iconSize="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"

                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <include
                    android:id="@+id/invitation_details_course_item"
                    layout="@layout/invitation_course_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/invitation_details_cancel_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dialog_cancel_text"
                android:textSize="18sp" />

            <Button
                android:id="@+id/invitation_details_send_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/invitation_send_text"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>